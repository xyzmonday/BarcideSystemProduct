<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/root_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/ref_name" />

        <com.richfit.common_lib.widget.RichEditText
            android:id="@+id/et_ref_num"
            style="@style/RightRichEditTextItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/ref_name" />

        <TextView
            android:id="@+id/tv_ref_num"
            style="@style/RightTextViewItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding"
        android:visibility="gone">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/rec_work" />

        <TextView
            android:id="@+id/tv_send_work"
            style="@style/RightTextViewItemStyle"
            android:hint="@string/send_work" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            android:id="@+id/tv_work_name"
            style="@style/LeftTextViewItemStyle"
            android:text="@string/rec_work" />

        <TextView
            android:id="@+id/tv_work"
            style="@style/RightTextViewItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_inv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            android:id="@+id/tv_inv_name"
            style="@style/LeftTextViewItemStyle"
            android:text="@string/rec_inv" />

        <TextView
            android:id="@+id/tv_inv"
            style="@style/RightTextViewItemStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/collect_row_padding">

        <TextView
            style="@style/LeftTextViewItemStyle"
            android:text="@string/transfer_date" />

        <com.richfit.common_lib.widget.RichEditText
            android:id="@+id/et_transfer_date"
            style="@style/RightRichEditTextItemStyle" />
    </LinearLayout>
</LinearLayout>